brew 'tree'
brew 'stow'
#   Docker
brew 'docker'
brew 'docker-completion'
brew 'docker-compose-completion'
brew 'docker-machine-completion'

# install packages
tap 'homebrew/cask-cask' || true

# Install apps
#   Google
