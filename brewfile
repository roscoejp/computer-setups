# Update Homebrew and packages
update
upgrade

# specify a directory to install
cask_args appdir: '/Applications'

# install packages
tap 'caskroom/homebrew-cask' || true
brew 'git'
brew 'bash-completion'
brew 'tree'

brew 'wget'

# Casks
cask 'google-chrome'
cask 'alfred'
cask 'slack'
cask 'microsoft-teams'
cask 'iterm2'
